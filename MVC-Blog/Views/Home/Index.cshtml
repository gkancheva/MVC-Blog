@{
    ViewBag.Title = "Home Page";
}
@using MVC_Blog.Models
@using MVC_Blog.UtilsClasses
@model List<Post>

<div class="row">
    <section class="sidebar col-md-2">
        <h4>Latest Posts</h4>
        @foreach (var post in Model)
        {
            <div><a href="/Posts/Details/@post.Id">@post.Title</a></div>
        }
    </section>
    <section class="col-md-10">
        @foreach (var post in Model)
        {
            <article class="post col-md-6">
                <h2 class="title">@post.Title</h2>
                <div class="about">
                    Posted
                    @if (post.Author != null)
                {
                        @:by
                        <i>@post.Author.FullName (@post.Author.UserName)</i>
                    }

                    on <i>@post.Date</i>
                    <div class="body">@Html.Raw(Utils.CutTexPostHome(post.Body))</div>
                </div>
            </article>
        }
    </section> 
</div>